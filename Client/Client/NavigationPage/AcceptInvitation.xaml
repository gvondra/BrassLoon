<Page x:Class="BrassLoon.Client.NavigationPage.AcceptInvitation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrassLoon.Client.NavigationPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AcceptInvitation">

    <Grid Margin="5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="99" Style="{StaticResource PageTitle}">Invitation</TextBlock>
        <Label Grid.Column="0" Grid.Row="1">Invitation Id</Label>
        <TextBox x:Name="InvitationIdTextBox" Grid.Column="1" Grid.Row="1" MinWidth="250" />
        <Button Grid.Column="2" Grid.Row="1" Margin="5,0" Padding="5,0" Click="AcceptButton_Click">Accept</Button>
    </Grid>
</Page>
